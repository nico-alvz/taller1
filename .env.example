# StreamFlow API - Environment Variables Template
# Copia este archivo a .env y reemplaza los valores con tu configuración

# ======================================
# Configuración General de la Aplicación
# ======================================
# Puerto en el que se ejecutará la aplicación
PORT=3000

# Entorno de ejecución (development, production, test)
NODE_ENV=development

# Nivel de logging (debug, info, warn, error)
LOG_LEVEL=info

# ======================================
# Configuración de JWT
# ======================================
# Secreto para firmar los tokens JWT (¡CAMBIAR POR UN VALOR SEGURO EN PRODUCCIÓN!)
JWT_SECRET=reemplazar_con_clave_segura_en_produccion

# Tiempo de expiración de los tokens JWT
JWT_EXPIRATION=1h

# ======================================
# Base de Datos de Autenticación (PostgreSQL - Supabase)
# ======================================
# Host de la base de datos
AUTH_DB_HOST=localhost

# Puerto de la base de datos
AUTH_DB_PORT=5432

# Nombre de la base de datos
AUTH_DB_NAME=streamflow_auth

# Usuario de la base de datos
AUTH_DB_USER=postgres

# Contraseña de la base de datos (¡REEMPLAZAR EN PRODUCCIÓN!)
AUTH_DB_PASSWORD=postgres_password

# URL de conexión completa (alternativa a las credenciales individuales)
# AUTH_DB_URL=postgres://usuario:contraseña@host:puerto/nombre_db

# ======================================
# Base de Datos de Usuarios (MySQL)
# ======================================
# Host de la base de datos
USERS_DB_HOST=localhost

# Puerto de la base de datos
USERS_DB_PORT=3306

# Nombre de la base de datos
USERS_DB_NAME=streamflow_users

# Usuario de la base de datos
USERS_DB_USER=root

# Contraseña de la base de datos (¡REEMPLAZAR EN PRODUCCIÓN!)
USERS_DB_PASSWORD=mysql_password

# ======================================
# Configuración de Despliegue (opcional)
# ======================================
# URL base de la API para enlaces y documentación
BASE_URL=http://localhost:3000

# Habilitar CORS para todos los orígenes (true/false)
CORS_ENABLED=true

# Orígenes permitidos para CORS (separados por comas)
# CORS_ORIGINS=https://example.com,https://api.example.com

# ======================================
# Configuración de Supabase (opcional, para producción)
# ======================================
# URL del proyecto Supabase
# SUPABASE_URL=https://your-project.supabase.co

# Clave anónima (pública) de Supabase
# SUPABASE_KEY=your_supabase_anon_key

